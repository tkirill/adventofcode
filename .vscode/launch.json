{
    // Command variable extension: https://marketplace.visualstudio.com/items?itemName=rioj7.command-variable
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: AoC day",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "module": "aoc",
            "args": ["-y", "${input:year}", "-d", "${input:day}"]
        }
    ],
    "inputs": [
        {
            "id": "year",
            "type": "command",
            "command": "extension.commandvariable.transform",
            "args": {
                "text": "${command:extension.commandvariable.file.fileDirBasename}",
                "find": "year(\\d+)",
                "replace": "$1"
            }
        },
        {
            "id": "day",
            "type": "command",
            "command": "extension.commandvariable.transform",
            "args": {
                "text": "${fileBasenameNoExtension}",
                "find": "day_(\\d+).*",
                "replace": "$1"
            }
        }
    ]
}